{
	"name": "groq-code-cli",
	"version": "1.0.2",
	"license": "MIT",
	"bin": {
		"groq": "dist/core/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest watch",
		"test:ui": "vitest --ui"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"chalk": "^5.4.1",
		"commander": "^14.0.0",
		"groq-sdk": "^0.27.0",
		"ink": "^6.0.1",
		"meow": "^11.0.0",
		"react": "^19.1.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@testing-library/react": "^16.3.0",
		"@types/react": "^19.1.8",
		"@vdemedes/prettier-config": "^2.0.1",
		"@vitejs/plugin-react": "^5.0.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"happy-dom": "^18.0.1",
		"ink-testing-library": "^3.0.0",
		"node-pty": "^1.0.0",
		"prettier": "^2.8.7",
		"strip-ansi": "^7.1.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"vitest": "^3.2.4",
		"xo": "^1.2.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
